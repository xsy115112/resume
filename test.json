{
  "ROSTemplateFormatVersion": "2015-09-01",
  "Description": "Create VPC ECS instance",
  "Parameters": {
    "PublicIP": {
      "Type": "Boolean",
      "Description": "Allocate Public IP or Not",
      "Label": "Allocate Public IP or Not",
      "Default": false
    },
    "ImageId": {
      "Type": "String",
      "Description": "ECS Image",
      "Label": "ECS Image",
      "Default": "centos_7"
    },
    "InstanceType": {
      "Type": "String",
      "Description": "ECS Instance Type",
      "AllowedValues": [
        "ecs.n1.medium",
        "ecs.n1.large",
        "ecs.n2.medium",
        "ecs.n2.large",
        "ecs.n4.large",
        "ecs.n4.xlarge",
        "ecs.mn4.large",
        "ecs.mn4.xlarge",
        "ecs.e4.large",
        "ecs.cm4.xlarge",
        "ecs.ce4.xlarge",
        "ecs.c4.xlarge",
        "ecs.ga1.4xlarge",
        "ecs.ga1.8xlarge",
        "ecs.ga1.2xlarge",
        "ecs.gn4-c8g1.4xlarge",
        "ecs.gn4.8xlarge",
        "ecs.gn4.14xlarge",
        "ecs.gn4-c8g1.2xlarge",
        "ecs.gn4-c4g1.xlarge",
        "ecs.gn4-c4g1.2xlarge",
        "ecs.gn5-c4g1.2xlarge",
        "ecs.gn5-c4g1.xlarge",
        "ecs.gn5-c8g1.2xlarge",
        "ecs.gn5-c8g1.4xlarge"
      ],
      "Label": "ECS Instance Type",
      "Default": "ecs.n4.large"
    },
    "LoginPassword": {
      "NoEcho": true,
      "Type": "String",
      "Description": "ECS Login Password",
      "AllowedPattern": "[a-zA-Z0-9-\\(\\)\\`\\~\\!@\\#\\$%\\^&\\*-+=\\|\\{\\}\\[\\]\\:\\;\\â€˜\\,\\.\\?\\/]*",
      "Label": "ECS Login Password",
      "MinLength": 8,
      "MaxLength": 41
    }
  },
  "Resources": {
    "vswitch": {
      "Type": "ALIYUN::ECS::VSwitch",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "ZoneId": {
          "Fn::Select": [
            "0",
            {
              "Fn::GetAZs": {
                "Ref": "ALIYUN::Region"
              }
            }
          ]
        },
        "CidrBlock": "192.168.0.0/16"
      }
    },
    "ecs": {
      "Type": "ALIYUN::ECS::PrepayInstance",
      "Properties": {
        "PeriodType": "Monthly",
        "PrivateIpAddress": "192.168.0.2",
        "SecurityGroupId": {
          "Ref": "sg"
        },
        "VSwitchId": {
          "Ref": "vswitch"
        },
        "Period": 2,
        "MaxAmount": 50,
        "SystemDiskCategory": "cloud_ssd",
        "VpcId": {
          "Ref": "vpc"
        },
        "MinAmount": 20,
        "ImageId": {
          "Ref": "ImageId"
        },
        "AllocatePublicIP": {
          "Ref": "PublicIP"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "Password": {
          "Ref": "LoginPassword"
        }
      }
    },
    "ecs2": {
      "Type": "ALIYUN::ECS::PrepayInstance",
      "Properties": {
        "PeriodType": "Monthly",
        "PrivateIpAddress": "192.168.0.1",
        "SecurityGroupId": {
          "Ref": "sg"
        },
        "VSwitchId": {
          "Ref": "vswitch"
        },
        "Period": 6,
        "MaxAmount": 50,
        "SystemDiskCategory": "cloud_ssd",
        "VpcId": {
          "Ref": "vpc"
        },
        "MinAmount": 20,
        "ImageId": {
          "Ref": "ImageId"
        },
        "AllocatePublicIP": {
          "Ref": "PublicIP"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "Password": {
          "Ref": "LoginPassword"
        }
      }
    },
    "sg": {
      "Type": "ALIYUN::ECS::SecurityGroup",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "SecurityGroupName": "mysg",
        "SecurityGroupIngress": [
          {
            "PortRange": "-1/-1",
            "Priority": 1,
            "SourceCidrIp": "0.0.0.0/0",
            "IpProtocol": "all",
            "NicType": "intranet"
          }
        ],
        "SecurityGroupEgress": [
          {
            "PortRange": "-1/-1",
            "Priority": 1,
            "IpProtocol": "all",
            "DestCidrIp": "0.0.0.0/0",
            "NicType": "intranet"
          }
        ]
      }
    },
    "vpc": {
      "Type": "ALIYUN::ECS::VPC",
      "Properties": {
        "CidrBlock": "192.168.0.0/16",
        "VpcName": "myvpc"
      }
    }
  }
}